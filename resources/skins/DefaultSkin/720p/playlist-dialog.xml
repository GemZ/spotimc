<window id="4003">
    <defaultcontrol always="false">1</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>0000000</backgroundcolor>
    <visible>true</visible>
    <zorder>1</zorder>
    <coordinates>
	    <posx></posx>
	    <posy></posy>
    </coordinates>
    <previouswindow>4001</previouswindow>
    <useincludes>false</useincludes>
    
    <controls>
        <control type="group" id="1">
            <description>Playlist dialog container</description>
            <defaultcontrol>2</defaultcontrol>
            <visible>true</visible>
            <posx>368</posx>
            <posy>64</posy>
            <width>512</width>
            <height>560</height>
            
            <animation type="WindowOpen">
		    	<effect type="slide" tween="cubic" easing="out" time="200" start="0,-800" end="0,0" />
		    </animation>
		    
		    <animation type="Hidden">
		    	<effect type="slide" tween="cubic" easing="in" time="200" start="0,0" end="0,800" />
		    </animation>
		    
			<animation effect="fade" time="100">WindowOpen</animation>
		    <animation effect="slide" end="0,576" time="100">WindowClose</animation>
		    
		    <control type="image">
		    	<include>spotimc_dialog_border</include>
	            <description>Window border</description>
	            <posx>-16</posx>
	            <posy>-16</posy>
	            <width>544</width>
	            <height>592</height>
	        </control>
	        
	        <control type="image">
	        	<include>spotimc_dialog_bg</include>
	            <description>Window background image</description>
	            <posx>0</posx>
	            <posy>0</posy>
	            <width>512</width>
	            <height>560</height>
	        </control>
	        
	        
	        <!-- Dialog title -->
            <control type="label">
            	<include>spotimc_dialog_title</include>
            	<label>Select a playlist</label>
            	<width>512</width>
			</control>
			
			
			<!-- Dialog contents -->
			<control type="group" id="2">
	            <description>Playlist dialog container</description>
	            <defaultcontrol>3</defaultcontrol>
	            <visible>true</visible>
	            <posx>0</posx>
	            <posy>64</posy>
	            <width>512</width>
	            <height>432</height>
				
				
				<control type="list" id="3">
					<include>spotimc_dialog_list</include>
					<description>List</description>
					<posx>0</posx>
					<posy>4</posy>
					<width>512</width>
					<height>428</height>
					<onup>-</onup>
					<ondown>10</ondown>
					<onleft>10</onleft>
					<onright>10</onright>
					<pagecontrol>4</pagecontrol>
				</control>
				
				<!-- Scrollbar -->
				<control type="scrollbar" id="4">
					<include>spotimc_scrollbar_always</include>
					<posx>496</posx>
					<posy>8</posy>
					<width>8</width>
					<height>418</height>
					<onup>-</onup>
					<ondown>-</ondown>
					<onleft>-</onleft>
					<onright>-</onright>
				</control>
			</control>
			
			
			<!-- Lower button container -->
			<control type="group" id="10">
				<description>Playlist dialog container</description>
				<defaultcontrol>11</defaultcontrol>
				<visible>true</visible>
				<posx>0</posx>
				<posy>496</posy>
				<width>512</width>
				<height>64</height>
	            
				<!-- Lower buttons -->
				<control type="button" id="11">
					<include>spotimc_dialog_button</include>
					<description>Done button</description>
					<label>Done</label>
					<posx>200</posx>
					<posy>12</posy>
					<onclick></onclick>
					<onfocus></onfocus>
					<onup>2</onup>
					<ondown>-</ondown>
					<onleft>-</onleft>
					<onright>12</onright>
				</control>
		        
		        <!-- Lower buttons -->
				<control type="button" id="12">
					<include>spotimc_dialog_button</include>
					<description>Cancel button</description>
					<label>Cancel</label>
					<posx>356</posx>
					<posy>12</posy>
					<onclick>-</onclick>
					<onfocus></onfocus>
					<onup>2</onup>
					<ondown>-</ondown>
					<onleft>11</onleft>
					<onright>-</onright>
				</control>
			</control>
        </control>
    </controls>
</window>
