<window id="4001" type="window">
    <defaultcontrol always="false">1000</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <backgroundcolor>ff000000</backgroundcolor>
    <animation effect="fade" time="300">WindowOpen</animation>
    <visible>true</visible>
    <zorder>0</zorder>
    <previouswindow></previouswindow>
    <useincludes>false</useincludes>
    
    <controls>
    	<!-- Main background image -->
    	<control type="image">
            <description>Main background image</description>
            <posx></posx>
            <posy></posy>
            <width>1280</width>
            <height>720</height>
            <visible>true</visible>
            <colordiffuse>FFFFFFFF</colordiffuse>
            <fadetime>200</fadetime>
            <texture border="5" flipy="false" flipx="false">main-bg.png</texture>
            <aspectratio>stretch</aspectratio>
        </control>
        
        <control type="group" id="100">
            <description>Content Group</description>
            <defaultcontrol>1000</defaultcontrol>
            <visible>true</visible>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
			
			<animation effect="slide" tween="sine" condition="ControlGroup(500).HasFocus()" time="300" easing="out" start="0,0" end="300,0">Conditional</animation>
			
			<control type="group" id="200">
	        	<description>Main Menu</description>
	            <defaultcontrol>1000</defaultcontrol>
	            <visible>true</visible>
	            <posx>0</posx>
	            <posy>0</posy>
	            <width>1280</width>
	            <height>128</height>
	            
	            <control type="image">
					<description>Main menu background</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>128</height>
					<visible>true</visible>
					<colordiffuse>FFFFFFFF</colordiffuse>
					<texture>main-menu/header-bg.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<control type="button" id="201">
					<description>Spotify core logo</description>
					<posx>1164</posx>
					<posy>12</posy>
					<width>104</width>
					<height>104</height>
					<visible>true</visible>
					<colordiffuse>FFFFFFFF</colordiffuse>
					<texturefocus>main-menu/spotify-core-logo-focus.png</texturefocus>
					<texturenofocus>main-menu/spotify-core-logo.png</texturenofocus>
					<label></label>
					<font>font12</font>
					<textcolor>FFFFFFFF</textcolor>
					<disabledcolor>80FFFFFF</disabledcolor>
					<onclick></onclick>
					<onfocus>-</onfocus>
					<onup>2</onup>
					<ondown>3</ondown>
					<onleft>1</onleft>
					<onright>1</onright>
				</control>
				
				<control type="grouplist" id="210">
					<description>Main menu options</description>
					<posx>32</posx>
					<posy>88</posy>
					<width>1000</width>
					<height>40</height>
					<itemgap>8</itemgap>
					<pagecontrol>25</pagecontrol>
					<scrolltime tween="sine" easing="out">200</scrolltime>
					<orientation>horizontal</orientation>
					<usecontrolcoords>false</usecontrolcoords>
					<visible>true</visible>
					<onup>2</onup>
					<ondown>3</ondown>
					<onleft>1</onleft>
					<onright>1</onright>
					
					<control type="togglebutton" id="211">
						<include>spotymc_topmenu_option</include>
						<visible>true</visible>
						<width>152</width>
						<label>New Stuff</label>
						<usealttexture>false</usealttexture>
					</control>
					
					<control type="togglebutton" id="212">
						<include>spotymc_topmenu_option</include>
						<visible>true</visible>
						<width>136</width>
						<label>Playlists</label>
						<usealttexture>true</usealttexture>
					</control>
					
					<control type="togglebutton" id="213">
						<include>spotymc_topmenu_option</include>
						<visible>true</visible>
						<width>120</width>
						<label>Search</label>
						<usealttexture>true</usealttexture>
					</control>
					
					<control type="togglebutton" id="214">
						<include>spotymc_topmenu_option</include>
						<visible>true</visible>
						<width>180</width>
						<label>Now Playing</label>
						<usealttexture>true</usealttexture>
					</control>
					
					<control type="togglebutton" id="215">
						<include>spotymc_topmenu_option</include>
						<visible>true</visible>
						<width>128</width>
						<label>More...</label>
						<usealttexture>true</usealttexture>
					</control>
				</control>
	        </control>
			
			<!-- Left Menu -->
			<control type="group" id="500">
				<description>Left Menu Group</description>
				<defaultcontrol>501</defaultcontrol>
				<visible>true</visible>
				<posx>-332</posx>
				<posy></posy>
				<width>332</width>
				<height>692</height>
				
				<control type="image">
					<description>Left menu background</description>
					<posx>-94</posx>
					<posy></posy>
					<width>426</width>
					<height>692</height>
					<visible>true</visible>
					<colordiffuse>FFFFFFFF</colordiffuse>
					<fadetime>200</fadetime>
					<texture>left-menu/background.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<!-- Toplist options -->
				<control type="group" id="501">
					<description>Toplist options</description>
					<defaultcontrol>502</defaultcontrol>
					<visible>true</visible>
					<posx>32</posx>
					<posy>32</posy>
					<width>200</width>
					<height>623</height>
					
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>300</width>
						<height>16</height>
						<font>font13</font>
						<aligny>center</aligny>
						<selectedcolor>ff969696</selectedcolor>
						<align>left</align>
						<textcolor>ff969696</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<label>Show toplists for...</label>
					</control>
					
					<control type="button" id="502">
						<include>spotymc_leftbutton</include>
						<label>Button1</label>
						<description></description>
						<posx></posx>
						<posy>32</posy>
						<onup></onup>
						<ondown></ondown>
						<onleft></onleft>
						<onright>1000</onright>
					</control>
					
					<control type="button" id="503">
						<include>spotymc_leftbutton</include>
						<label>Button2</label>
						<description></description>
						<posx>0</posx>
						<posy>72</posy>
						<onfocus>SendClick(53)</onfocus>
						<onclick>-</onclick>
						<onup></onup>
						<ondown></ondown>
						<onleft></onleft>
						<onright>1000</onright>
					</control>
				</control>
			</control>
			
            <!-- View Content Group -->
			<control type="group" id="1000">
				<description>View Content Group</description>
				<defaultcontrol>1100</defaultcontrol>
				<visible>true</visible>
				<posx>48</posx>
				<posy>128</posy>
				
				
				<!-- New stuff container -->
				<control type="group" id="1200">
					<description>View Content Group</description>
					<defaultcontrol>1100</defaultcontrol>
					<visible>false</visible>
					<posx>0</posx>
					<posy>0</posy>
					
					<control type="label">
						<include>spotymc_title</include>
						<label>New Stuff</label>
						<posx>0</posx>
						<posy>32</posy>
					</control>
				
					<!-- New stuff list -->
					<control type="panel" id="1201">
						<include>spotymc_albumgrid</include>
						<description>New Stuff</description>
						<pagecontrol>1202</pagecontrol>
						<onup>-</onup>
						<ondown>-</ondown>
						<onleft>-</onleft>
						<onright>-</onright>
						<posx>0</posx>
						<posy>64</posy>
					</control>
					
					<!-- Scrollbar -->
					<control type="scrollbar" id="1202">
						<include>spotymc_scrollbar</include>
						<posx>1152</posx>
						<posy>64</posy>
						<width>8</width>
						<height>496</height>
						<onup>-</onup>
						<ondown>-</ondown>
						<onleft>-</onleft>
						<onright>-</onright>
					</control>
				</control>
				
				
				<!-- Album tracks view -->
				<control type="group" id="1300">
					<description>Album tracks view</description>
					<defaultcontrol>1100</defaultcontrol>
					<visible>false</visible>
					<posx>0</posx>
					<posy>0</posy>
					
					<control type="label">
						<include>spotymc_title</include>
						<label>$INFO[Container.Property(AlbumName)] [COLOR ff969696]by $INFO[Container.Property(ArtistName)][/COLOR]</label>
						<posx>0</posx>
						<posy>32</posy>
					</control>
					
					<!-- Album Cover -->
					<control type="image">
						<include>spotymc_albumcover</include>
						<posx>0</posx>
						<posy>80</posy>
						<width>288</width>
						<height>288</height>
						<info>Container.Property(AlbumCover)</info>
					</control>
					
					<!-- Track list -->
					<control type="list" id="1303">
						<include>spotymc_tracklist</include>
						<description>Track list</description>
						<posx>336</posx>
						<posy>80</posy>
						<onup>-</onup>
						<ondown>-</ondown>
						<onleft>-</onleft>
						<onright>-</onright>
						<pagecontrol>1304</pagecontrol>
					</control>
					
					<!-- Scrollbar -->
					<control type="scrollbar" id="1304">
						<include>spotymc_scrollbar</include>
						<posx>1168</posx>
						<posy>80</posy>
						<width>8</width>
						<height>496</height>
						<onup>-</onup>
						<ondown>-</ondown>
						<onleft>-</onleft>
						<onright>-</onright>
					</control>
				</control>
				
			</control>
		</control>
    </controls>
</window>
