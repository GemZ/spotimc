					<visible>true</visible>
					<colordiffuse>FFFFFFFF</colordiffuse>
					<fadetime>200</fadetime>
					<texture>left-menu/background.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<!-- Toplist options -->
				<control type="group" id="501">
					<description>Toplist options</description>
					<defaultcontrol>502</defaultcontrol>
					<visible>true</visible>
					<posx>32</posx>
					<posy>32</posy>
					<width>200</width>
					<height>623</height>
					
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>300</width>
						<height>16</height>
						<font>font13</font>
						<aligny>center</aligny>
						<selectedcolor>ff969696</selectedcolor>
						<align>left</align>
						<textcolor>ff969696</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<label>Show toplists for...</label>
					</control>
					
					<control type="button" id="502">
						<include>spotymc_leftbutton</include>
						<label>Button1</label>
						<description></description>
						<posx></posx>
						<posy>32</posy>
						<onup></onup>
						<ondown></ondown>
						<onleft></onleft>
						<onright>1000</onright>
					</control>
					
					<control type="button" id="503">
						<include>spotymc_leftbutton</include>
						<label>Button2</label>
						<description></description>
						<posx>0</posx>
						<posy>72</posy>
						<onfocus>SendClick(53)</onfocus>
						<onclick>-</onclick>
						<onup></onup>
						<ondown></ondown>
						<onleft></onleft>
						<onright>1000</onright>
					</control>
				</control>
			</control>
			
