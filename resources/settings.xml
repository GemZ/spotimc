<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
	<category label="Cache">
		<setting id="general_cache_enable" type="bool" label="Enable cache" default="true" />
		<setting id="general_cache_auto" type="enum" label="Cache management" values="Automatic|Manual" enable="eq(-1,true)" default="0" />
		<setting id="general_cache_size" type="slider" label="Maximum cache size (GB)" range="1,100" enable="eq(-1,1) + eq(-2,true)" visible="eq(-1,1)" option="int" default="1" />
		<setting label="A maximum of 10% of the available space will be used." type="lsep" visible="eq(-2,0)" enable="eq(-3,true)" />
	</category>
	
	<category label="Audio">
		<setting id="audio_hide_unplayable" type="bool" label="Hide unplayable items" default="true" />
		<setting id="audio_normalize" type="bool" label="Normalize volume of tracks" default="true" />
		<setting id="audio_quality" type="enum" label="Stream quality" values="Low (96k)|Medium (160k)|High (320k)" default="1" />
	</category>
</settings>
